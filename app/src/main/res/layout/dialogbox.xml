<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="250sp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="#E8EAE3E3"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/txtcolorpenal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="5sp"
            android:layout_marginBottom="5sp"
            android:text="@string/color_penal"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:id="@+id/hScroll1"
            android:layout_width="match_parent"
            android:layout_height="28sp"
            android:layout_below="@id/txtcolorpenal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/color1"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginStart="5sp"
                    android:background="@color/black"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/color2"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginStart="5sp"
                    android:background="@color/Pink"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/color3"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginStart="5sp"
                    android:background="@color/yellow"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/color4"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginStart="5sp"
                    android:background="@color/Red"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/color5"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginStart="5sp"
                    android:background="@color/green"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/color6"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginStart="5sp"
                    android:background="@color/Maroon"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/color7"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginStart="5sp"
                    android:background="@color/Olive"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/color8"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginStart="5sp"
                    android:background="@color/Navy"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/color9"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginStart="5sp"
                    android:background="@color/Purple"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/color10"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginStart="5sp"
                    android:background="@color/Aquamarine"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/color11"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginStart="5sp"
                    android:background="@color/LightBlue"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/color12"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginStart="5sp"
                    android:background="@color/Cream"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/color13"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginStart="5sp"
                    android:background="@color/DarkCoffee"
                    android:orientation="horizontal" />

            </LinearLayout>

        </HorizontalScrollView>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/material1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/hScroll1"
            android:layout_marginTop="10sp"
            app:dividerColor="@color/black" />

        <TextView
            android:id="@+id/txtdesignpenal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/material1"
            android:layout_marginStart="5sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="5sp"
            android:layout_marginBottom="5sp"
            android:text="@string/design_penal"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:id="@+id/hScroll2"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:layout_below="@id/txtdesignpenal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/design1"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_marginStart="5sp"
                    android:importantForAccessibility="no"
                    android:orientation="horizontal"
                    android:src="@drawable/b4" />

                <ImageView
                    android:id="@+id/design2"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_marginStart="5sp"
                    android:importantForAccessibility="no"
                    android:orientation="horizontal"
                    android:src="@drawable/b5" />

                <ImageView
                    android:id="@+id/design3"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_marginStart="5sp"
                    android:importantForAccessibility="no"
                    android:orientation="horizontal"
                    android:src="@drawable/bng" />

                <ImageView
                    android:id="@+id/design4"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_marginStart="5sp"
                    android:importantForAccessibility="no"
                    android:orientation="horizontal"
                    android:src="@drawable/wpb2" />

                <ImageView
                    android:id="@+id/design5"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_marginStart="5sp"
                    android:importantForAccessibility="no"
                    android:orientation="horizontal"
                    android:src="@drawable/wpb3" />

                <ImageView
                    android:id="@+id/design6"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_marginStart="5sp"
                    android:importantForAccessibility="no"
                    android:orientation="horizontal"
                    android:src="@drawable/wpb4" />

                <ImageView
                    android:id="@+id/design7"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_marginStart="5sp"
                    android:importantForAccessibility="no"
                    android:orientation="horizontal"
                    android:src="@drawable/wpbackground" />

            </LinearLayout>

        </HorizontalScrollView>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/material2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/hScroll2"
            android:layout_marginTop="10sp"
            app:dividerColor="@color/black" />

        <TextView
            android:id="@+id/txtfontpenal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/material2"
            android:layout_marginStart="5sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="5sp"
            android:layout_marginBottom="5sp"
            android:text="@string/font_penal"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:id="@+id/hScroll3"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:layout_below="@id/txtfontpenal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/font1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="5sp"
                    android:fontFamily="@font/clouds"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:text="Clouds" />

                <TextView
                    android:id="@+id/font2"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_marginStart="5sp"
                    android:fontFamily="@font/hello_christmas_trial"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:text="Hello Christmas" />

                <TextView
                    android:id="@+id/font3"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_marginStart="5sp"
                    android:fontFamily="@font/hoecake"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:text="Hoecake" />

                <TextView
                    android:id="@+id/font4"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_marginStart="5sp"
                    android:fontFamily="@font/monas"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:text="Monas" />

                <TextView
                    android:id="@+id/font5"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_marginStart="5sp"
                    android:fontFamily="@font/peach_cake"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:text="Peach Cake" />

                <TextView
                    android:id="@+id/font6"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_marginStart="5sp"
                    android:fontFamily="@font/soulbillani"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:text="Soul Billani" />

                <TextView
                    android:id="@+id/font7"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_marginStart="5sp"
                    android:fontFamily="@font/super_disco"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:text="Super Disco" />

            </LinearLayout>

        </HorizontalScrollView>


    </RelativeLayout>

</RelativeLayout>